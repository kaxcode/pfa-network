-# Posts
-# =============================================
.col-md-5.col-xs-4.top-category-post-index-box
  .admin-editing-tools-box.new-category-admin-box
    - if current_user_admin?
      = link_to new_category_path do
        %button.btn.btn-large.btn-success
          New
    = link_to root_path do
      %button.btn.btn-large.btn-warning
        Back
.col-md-7.col-xs-8.top-category-post-index-box
  .h2.post-category-name
    =@category.name
.row
  - @posts.each do |post|
    .col-md-8.col-md-offset-2
      = link_to [post.category, post], class: "post-link-hover" do
        .table-responsive.table.table.table-striped.table-bordered.post-link-hover
          %td.post-link-hover
            %p.post-link-hover
            = post.user.name
            %p.post-link-hover
            = post.created_at
            %h1.post-link-hover
              = post.title
            %p=post.body
            %p.comment_count_heart
              %span.i.fa.fa-heart{"aria-hidden" => "true"} &nbsp;
              %span Count
              %span.i.fa.fa-commenting-o{"aria-hidden" => "true"} &nbsp;
              %span Count
