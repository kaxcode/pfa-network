-# Posts
-# =============================================
.col-md-5.col-xs-4.top-topic-post-index-box
  .admin-editing-tools-box.new-topic-admin-box
    - if current_user_admin?
      = link_to new_topic_path do
        %button.btn.btn-large.btn-success
          New
    = link_to root_path do
      %button.btn.btn-large.btn-warning
        Back
    = link_to new_topic_post_path do
      %button.btn.btn-large.btn-success
        Write a Post
.col-md-7.col-xs-8.top-topic-post-index-box
  .h2.post-topic-name
    =@topic.name
.row
  - @posts.each do |post|
    .col-md-8.col-md-offset-2
      = link_to [post.topic, post], class: "post-link-hover" do
        .table-responsive.table.table.table-striped.table-bordered.post-link-hover
          %td.post-link-hover
            %p.post-link-hover
            = post.user.name
            %p.post-link-hover
            = distance_of_time_in_words_to_now(post.created_at)
            %h1.post-link-hover
              = post.title
            %p= (post.body).truncate(200)
            %p.comment_count_heart
              %span.i.fa.fa-heart{"aria-hidden" => "true"} &nbsp;
              %span
                = post.likes.count
                &nbsp;
              %span.i.fa.fa-commenting-o{"aria-hidden" => "true"} &nbsp;
              %span Count
