= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  -# New Post Category Dropdown
  -# =============================================
  .post-new-form
    .col-md-8.col-md-offset-2
      .btn-group
        %button.btn.btn-info.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          %span#selected Choose Topic &nbsp;
          %span.i.fa.fa-chevron-down{"aria-hidden" => "true"}
        %ul.dropdown-menu
          - @categories.each do |category|
            %li
              = content_tag(:a, category.name)
      .form-group.post-new-form-title
        %label.h2{:for => "title"} Title:
        %textarea#comment.form-control{:rows => "1"}
      .form-group.post-new-form-text
        %label{:for => "text"}
        %textarea#comment.form-control{:rows => "5"}
      -# .form-group
      -#   %button#edit.btn.btn-info{:onclick => "edit()", :type => "button"} Edit
      .form-group
        .post-save-button.pull-right
          = f.submit class: 'btn btn-info', value: "Post"
