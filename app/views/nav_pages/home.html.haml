!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "content-type"}/
    %title Polk Family Autism Network

    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "keywords"}/
    %meta{:content => "", :name => "author"}/

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body

    -# Header
    -# =============================================
    %nav.navbar.navbar-inverse
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#myNavbar", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand
            PFAN
            %span Polk Family Autism Network
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
          %form.navbar-form.navbar-right
            .form-group
              %input.form-control{:placeholder => "Search", :type => "text"}/
            %button.btn.btn-default{:type => "submit"} Submit
          %ul.nav.navbar-nav.navbar-right
            %li.write-pos
              = link_to "Write a post", root_path
            %li.navbar-text
              Sign in / Sign up
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => "#"} Home
            %li
              %a{:href => "#"} Topics
            %li
              %a{:href => "#"} About

    -# Home Top Image/Logo
    .jumbotron.logo-image

    -# Topics List
    -# =============================================
    .container
      .row
        .col-md-6
          %a.button{:href => "#"} Topic 1
          %a.button{:href => "#"} Topic 2
          %a.button{:href => "#"} Topic 3
          %a.button{:href => "#"} Topic 4
        .col-md-6
          %a.button{:href => "#"} Topic 5
          %a.button{:href => "#"} Topic 6
          %a.button{:href => "#"} Topic 7
          %a.button{:href => "#"} Topic 8
